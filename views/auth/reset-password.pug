extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errorMessage 
            div.user-message.user-message--error #{errorMessage}
        if message 
            div.user-message.user-message #{message}
        form.signup-form(action="/reset-password", method="POST")
            .form-control
                label(for="email") #{resetPasswordNames.form.email}
                input(class=validationErrors.find(e => e.param === 'email') ? 'invalid' : '', type="text", name="email", value=oldInput.email)#email
            input(type="hidden", name="_csrf", value=csrfToken)
            button.btn(type="submit") #{resetPasswordNames.form.resetPass}
block scripts 