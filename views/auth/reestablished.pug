extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errorMessage 
            div.user-message.user-message--error #{errorMessage}
        div.centered
            p #{reestablishedNames.text.firstLine}
            p #{reestablishedNames.text.secondLine}#{emailSender}
            form.signup-form(action="/login", method="GET")
                input(type="hidden", name="_csrf", value=csrfToken)
                button.btn(type="submit") #{reestablishedNames.form.backLogin}
block scripts 