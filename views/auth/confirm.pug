extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errorMessage 
            div.user-message.user-message--error #{errorMessage}
        div.centered
            p #{confirmNames.text.firstLine.first}#{email}#{confirmNames.text.firstLine.second}
            p #{confirmNames.text.secondLine}
            p #{confirmNames.text.thirdLine} #{emailSender}
            form.signup-form(action="/", method="GET")
                input(type="hidden", name="_csrf", value=csrfToken)
                button.btn(type="submit") #{confirmNames.form.backIndex}
block scripts 