extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        include ../layouts/message-popup.pug 
        div.centered
            p #{emailSendedNames.text.firstLine}
            p #{emailSendedNames.text.secondLine}
            p #{emailSendedNames.text.thirdLine}#{emailSender}
            p #{emailSendedNames.text.fourthLine}
            form.signup-form(action="/reset-password", method="POST")
                input(type="hidden", name="_csrf", value=csrfToken)
                input(type="hidden", name="email", value=email)
                button.btn(type="submit") #{emailSendedNames.form.resendMail}
block scripts 