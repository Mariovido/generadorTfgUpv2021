extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        include ../layouts/message-popup.pug 
        form.signup-form(action="/account/change-password", method="POST")
            .form-control
                label(for="actualPassword") #{changePasswordNames.form.actualPassword}
                input(class=validationErrors.find(e => e.param === 'actualPassword') ? 'invalid' : '', type="password", name="actualPassword", value=oldInput.actualPassword)#actualPassword
            .form-control
                label(for="newPassword") #{changePasswordNames.form.newPassword}
                input(class=validationErrors.find(e => e.param === 'newPassword') ? 'invalid' : '', type="password", name="newPassword", value=oldInput.newPassword)#newPassword
            .form-control
                label(for="confirmNewPassword") #{changePasswordNames.form.confirmNewPassword}
                input(class=validationErrors.find(e => e.param === 'confirmNewPassword') ? 'invalid' : '', type="password", name="confirmNewPassword", value=oldInput.confirmNewPassword)#confirmNewPassword
            input(type="hidden", name="_csrf", value=csrfToken)
            button.btn(type="submit") #{changePasswordNames.form.changePass}
block scripts 